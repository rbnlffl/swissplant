  },
  "scripts": {
    "dev": "gulp --dev",
    "prod": "gulp",
    "dist": "gulp clean && gulp build",
    "start": "yarn dev"
  },
  "browserslist": [
    ">1% in ch",
    "not dead"
  ],
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "node": true,
      "es2017": true
    },
    "globals": {
      "google": "readonly",
      "angular": "readonly"
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-console": 1,
      "curly": [
        2,
        "all"
      ],
      "eqeqeq": [
        2,
        "always"
      ],
      "no-multi-spaces": 2,
      "no-multi-str": 2,
      "require-await": 2,
      "no-undefined": 2,
      "comma-dangle": [
        2,
        "never"
      ],
      "no-multi-assign": 2,
      "quotes": [
        2,
        "single"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 2,
      "declaration-colon-newline-after": null,
      "number-leading-zero": "never"
    },
    "defaultSeverity": "warning"
  }
}
